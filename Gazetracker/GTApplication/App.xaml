        <ResourceDictionary x:Name="IphoneStyleSmall" Source="/GTApplication;component/Style/style_iphonesmall.xaml"/>
        <ResourceDictionary x:Name="DataGridStyle" Source="/GTApplication;component/Style/style_datagrid.xaml" />
        <ResourceDictionary x:Name="TabControlStyle" Source="/GTApplication;component/Style/style_datagrid.xaml" />
        <ResourceDictionary x:Name="EditSlider" Source="/GTApplication;component/Style/style_editslider.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>

  </Application.Resources>
</Application>
