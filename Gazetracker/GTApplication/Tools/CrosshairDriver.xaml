<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CalibrationUI="clr-namespace:GTApplication.CalibrationUI" 
    x:Class="GTApplication.Tools.CrosshairDriver"
    Title="CrosshairDriver" WindowStyle="None" Background="{x:Null}" 
    AllowsTransparency="True" 
    Width="{DynamicResource {x:Static SystemParameters.FullPrimaryScreenWidthKey}}" 
    Height="{DynamicResource {x:Static SystemParameters.FullPrimaryScreenHeightKey}}">
    
	<Canvas x:Name="CanvasRoot">
		<CalibrationUI:VisualGazePoint x:Name="visualGazePoint" Canvas.Left="0" Canvas.Top="0"/>
	</Canvas>
    
</Window>
