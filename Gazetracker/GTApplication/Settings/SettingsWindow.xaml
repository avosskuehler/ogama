    				    <GTApplication_Tools:EditSlider x:Name="EditSliderGlintMax" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Center" Width="60" Height="18" FontSize="9.333" Minimum="1" Maximum="100"/>
