	<Grid x:Name="GridAdvancedPanel" Margin="0" VerticalAlignment="Bottom" Height="152.667">
    	<Rectangle Fill="#D8040404" Stroke="Black" RadiusX="4" RadiusY="4" Margin="0,-0.999,0,-2.001"/>

