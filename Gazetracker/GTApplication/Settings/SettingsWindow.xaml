    				<Label Margin="0,0,0,0" VerticalAlignment="Center" Content="Pupil" Foreground="#FF969696" Height="30"/>
    				<Label Margin="0,0,0,0" VerticalAlignment="Center" Content="Glint" Foreground="#FF969696" Height="30"/>
    			</StackPanel>
				
    			<StackPanel x:Name="StackPanelTracking" HorizontalAlignment="Left" Margin="40,25.666,0,25" Width="47.666">
    				<CheckBox x:Name="CheckBoxTrackingEye" IsChecked="{Binding TrackingEye}" Margin="0,10,0,0" Style="{DynamicResource iPhoneCheckBoxSmall}" VerticalAlignment="Center" Height="18" Content="CheckBox" Background="White" BorderBrush="#FF373737" HorizontalAlignment="Center" Width="43"/>
    				<CheckBox x:Name="CheckBoxTrackingPupil" IsChecked="{Binding TrackingPupil}" Margin="0,12,0,0" Style="{DynamicResource iPhoneCheckBoxSmall}" VerticalAlignment="Center" Height="18" Content="CheckBox" Background="White" BorderBrush="#FF373737" HorizontalAlignment="Center" Width="43"/>
    				<CheckBox x:Name="CheckBoxTrackingGlints" IsChecked="{Binding TrackingGlints}" Margin="0,12,0,0" Style="{DynamicResource iPhoneCheckBoxSmall}" VerticalAlignment="Center" Height="18.001" Content="CheckBox" Background="White" BorderBrush="#FF373737" HorizontalAlignment="Center" Width="43"/>
    			</StackPanel>
				
				
            	<StackPanel x:Name="StackPanelAuto" HorizontalAlignment="Left" Margin="93,25.666,0,25" Width="47.666">
            		<CheckBox x:Name="CheckBoxAutoEye" IsChecked="{Binding AutoEye}" Margin="0,10,0,0" Style="{DynamicResource iPhoneCheckBoxSmall}" VerticalAlignment="Center" Height="18" Content="CheckBox" Background="White" BorderBrush="#FF373737" HorizontalAlignment="Center" Width="43"/>
            		<CheckBox x:Name="CheckBoxAutoPupil" IsChecked="{Binding AutoPupil}" Margin="0,12,0,0" Style="{DynamicResource iPhoneCheckBoxSmall}" VerticalAlignment="Center" Height="18" Content="CheckBox" Background="White" BorderBrush="#FF373737" HorizontalAlignment="Center" Width="43"/>
            		<CheckBox x:Name="CheckBoxAutoGlint" IsChecked="{Binding AutoGlint}" Margin="0,12,0,0" Style="{DynamicResource iPhoneCheckBoxSmall}" VerticalAlignment="Center" Height="18.001" Content="CheckBox" Background="White" BorderBrush="#FF373737" HorizontalAlignment="Center" Width="43"/>
            	</StackPanel>
				
				
