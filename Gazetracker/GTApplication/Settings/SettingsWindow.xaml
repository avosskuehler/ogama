    		<Label Margin="36,6.667,0,0" VerticalAlignment="Top" Height="26" Content="Tracking" Foreground="#FF969696" Background="{x:Null}" HorizontalAlignment="Left" Width="55.94"/>
    		<Label Margin="99,6.667,0,0" VerticalAlignment="Top" Height="26" Content="Auto" Foreground="#FF969696" Background="{x:Null}" HorizontalAlignment="Left" Width="44.94"/>
    		<Label Margin="157,5.667,152.665,0" VerticalAlignment="Top" Height="26" Content="Sensitivity" Foreground="#FF969696" Background="{x:Null}"/>
    		<Label Margin="0,4.667,29,0" VerticalAlignment="Top" Height="26" Content="Range" Foreground="#FF969696" HorizontalAlignment="Right" Width="59.333"/>
    		
