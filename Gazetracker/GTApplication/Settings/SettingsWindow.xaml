            <Grid x:Name="GridTrackingScreen" Height="23" Margin="0,6,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200">
            	<Label FontSize="12" Foreground="#FFC3C3C3" Width="Auto" Margin="-3.5,-3,0,0" HorizontalAlignment="Left" Content="Monitor" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment"/>
