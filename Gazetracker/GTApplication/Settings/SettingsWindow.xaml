            </Grid>
            <Grid VerticalAlignment="Top" Height="30" x:Name="GridNumberOfPoints" Margin="0,32,0,0" Width="200" HorizontalAlignment="Center">
            	<Label Foreground="#FFC3C3C3" Content="Points" FontSize="12" Background="#00FFFFFF" Margin="-4,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="77.336"/>
            	<Grid Margin="66.003,0,0,0" VerticalAlignment="Center">
            		<RadioButton x:Name="Radio9Points" IsChecked="{Binding Using9Points, Mode=TwoWay}" FontSize="12" Foreground="#FFFFFFFF" Width="Auto" Content="9" Margin="0" IsEnabled="True" HorizontalAlignment="Left" d:LayoutOverrides="HorizontalAlignment, Height"/>
            		<RadioButton x:Name="Radio12Points" IsChecked="{Binding Using12Points, Mode=TwoWay}" FontSize="12" Foreground="#FFFFFFFF" Margin="0" Content="12" IsEnabled="True" HorizontalAlignment="Center" d:LayoutOverrides="Height"/>
