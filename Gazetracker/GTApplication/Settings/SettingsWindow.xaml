      	  	</Grid>
      	  	<Grid Margin="0" Height="30" Width="160" HorizontalAlignment="Right" VerticalAlignment="Bottom">
      	  		<CheckBox x:Name="CheckBoxUDPServerSendSmoothedData" IsChecked="{Binding UDPServerSendSmoothedData}" ToolTip="Send smoothed gaze data" Style="{DynamicResource iPhoneCheckBox}" Foreground="#FFA5A5A5" FontSize="12" FontWeight="Normal" Margin="0" HorizontalAlignment="Right" Width="60" Height="20" VerticalAlignment="Center"/>
      	  		<Label Margin="0,0,60,0" Content="Send smoothed" Foreground="#FFC7C7C7" d:LayoutOverrides="Height" FontSize="12"/>
      	  	</Grid>
      	  </Grid>
         </Grid>
       </TabItem>
        <TabItem Style="{StaticResource GTTabItem}" x:Name="TabItemCamera" Header="Camera" Margin="-3,0,0,0" HorizontalAlignment="Left" Width="73" Height="Auto" FontSize="10.667">
        	<Grid x:Name="GridCamera" Width="Auto" Margin="10,8,10,10">
        		<Grid x:Name="GridSelectCamera" Panel.ZIndex="2" Margin="0,8,0,27.667" Width="200" HorizontalAlignment="Center">
