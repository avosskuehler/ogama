        				<Label RenderTransformOrigin="0.5,0.5" Foreground="#FFD2D2D2" HorizontalAlignment="Left" Width="45" Content="Device" Margin="0" FontSize="12" d:LayoutOverrides="HorizontalAlignment" VerticalAlignment="Center" Height="25.64"/>
        				<ComboBox x:Name="ComboBoxDevices" SelectedIndex="{Binding DeviceNumber}" IsSynchronizedWithCurrentItem="False" VerticalAlignment="Top" Height="23" Panel.ZIndex="2" BorderBrush="#FF585858" Foreground="#FFFFFFFF" FontSize="12" Margin="49,0,0,0" d:LayoutOverrides="HorizontalAlignment">
        					<ComboBox.Background>
        						<LinearGradientBrush EndPoint="0.499,0" StartPoint="0.501,1">
        							<GradientStop Color="#7F303030" Offset="0"/>
        							<GradientStop Color="#C44B4B4B" Offset="1"/>
        						</LinearGradientBrush>
        					</ComboBox.Background>
        				</ComboBox>
        			</Grid>
        			<Grid x:Name="GridMode" Margin="0,28.04,1,27">
        				<Label RenderTransformOrigin="0.5,0.5" Foreground="#FFD2D2D2" HorizontalAlignment="Left" Width="45" Content="Mode" FontSize="12" VerticalAlignment="Bottom" Height="24" d:LayoutOverrides="HorizontalAlignment"/>
        				<ComboBox x:Name="ComboBoxDeviceModes" SelectedIndex="{Binding DeviceMode}" IsSynchronizedWithCurrentItem="False" Margin="49,1.96,0,1" Panel.ZIndex="2" BorderBrush="#FF585858" Foreground="#FFFFFFFF" FontSize="12">
        					<ComboBox.Background>
        						<LinearGradientBrush EndPoint="0.47,-0.784" StartPoint="0.482,1.608">
        							<GradientStop Color="#3E222222" Offset="0"/>
        							<GradientStop Color="#7F727272" Offset="1"/>
        						</LinearGradientBrush>
        					</ComboBox.Background>
        				</ComboBox>
        			</Grid>
        			<Grid x:Name="GridFlip" Margin="0,0,1,0" VerticalAlignment="Bottom">
        				<CheckBox x:Name="CheckBoxFlipImage" IsChecked="{Binding FlipImage}" Margin="68.132,0,0,0" Content="flip image" Foreground="#FFC9C9C9" Background="#FF727272" BorderBrush="{x:Null}" Style="{DynamicResource iPhoneCheckBox}" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        				<Label Margin="0,0,52.868,0" Content="Flip image" Foreground="#FFD2D2D2" d:LayoutOverrides="Width" VerticalAlignment="Bottom" FontSize="12"/>
        			</Grid>
        		</Grid>
        	</Grid>
        </TabItem>

       <!-- Options -->

       <TabItem Style="{StaticResource GTTabItem}" x:Name="TabItemOptions" Header="Options" Margin="-4,0,0,0" Width="73" Height="Auto" HorizontalAlignment="Left" FontSize="10.667">
          <Grid x:Name="GridOptions" Width="Auto" Height="Auto" VerticalAlignment="Stretch" Margin="8,8,8,0">

              <Grid x:Name="GridLogging" Visibility="Visible" Margin="5,0,8,36.541" VerticalAlignment="Bottom" Height="54" d:LayoutOverrides="GridBox">
              <Grid HorizontalAlignment="Left" Width="137" VerticalAlignment="Top" Margin="0,-1,0,0">
            		<CheckBox x:Name="CheckBoxLoggingEnabled" IsChecked="{Binding LoggingEnabled}" BorderBrush="{x:Null}" Foreground="#FFC1C1C1" Content="Log tracking data to file" Margin="0" FontSize="12" Background="#FF979797" Style="{DynamicResource iPhoneCheckBox}" Width="60" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            		<Label HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Content="Logging" Foreground="#FFC9C9C9" FontSize="12"/>
            	</Grid>
              <Grid Margin="0" VerticalAlignment="Bottom" d:LayoutOverrides="Width">
              	<TextBox x:Name="TextBoxLogFilePath" Text="{Binding LogFilePath}" Margin="5,4,0,4" TextWrapping="Wrap" FontSize="10" Foreground="White" Background="#A51C1C1C" BorderBrush="#FF585858" Width="270" HorizontalAlignment="Left" Height="22"/>
              	<GazeGUI:ButtonGlass ButtonAction="OpenLogFileDialog" ButtonLabel="Browse" FontSize="9" RenderTransformOrigin="0.5,0.5" AllowDrop="False" Height="25" VerticalAlignment="Bottom" Background="#FF3D3D3D" HorizontalAlignment="Right" Width="72.667" Margin="75.333,0,0,3"/>
              </Grid>
            </Grid>
            <Grid HorizontalAlignment="Left" Margin="4,2.002,0,0" VerticalAlignment="Top" Width="138" Height="28.124" d:LayoutOverrides="GridBox">
            	<CheckBox x:Name="CheckBoxEyeMouseEnabled" IsChecked="{Binding EyeMouseEnabled}" BorderBrush="{x:Null}" Foreground="#FFC1C1C1" Content="Redirect mouse" FontSize="12" Background="#FF959595" Margin="0" Style="{DynamicResource iPhoneCheckBox}" d:LayoutOverrides="GridBox" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            	<Label HorizontalAlignment="Left" Margin="0" Content="Eye mouse" Foreground="#FFC9C9C9" d:LayoutOverrides="HorizontalAlignment, GridBox" VerticalAlignment="Center" FontSize="12"/>
            </Grid>
          </Grid>
        </TabItem>

      </TabControl>
        
      <Label Content=" x" MouseDown="HideWindow" Background="{x:Null}" FontFamily="Verdana" FontSize="18" Foreground="#FFC3C3C3" HorizontalAlignment="Right" x:Name="LabelCloseX" Height="29.334" VerticalAlignment="Top" Width="37.653" Margin="0,-2.5,-10,0" Panel.ZIndex="2" />

    </Grid>


        <!-- Visualization -->

   <!-- Advanced options -->

