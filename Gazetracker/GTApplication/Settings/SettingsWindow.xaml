          		<GazeGUIVelocity:Button x:Name="BtnTrackingMethodHeadmounted" Action="SetTrackingMethod"  Margin="0" Width="110" Label="Headmounted" VerticalAlignment="Top" Height="70" FontSize="10.667" ActivationMethod="Mouse"/>
          		<GazeGUIVelocity:Button x:Name="BtnTrackingMethodRemoteBinocular" Action="SetTrackingMethod" Label="Remote Binocular" Width="110" Height="70" d:LayoutOverrides="HorizontalAlignment" Margin="10,0,0,0" ActivationMethod="Mouse" VerticalAlignment="Top"/>
          		<GazeGUIVelocity:Button x:Name="BtnTrackingMethodRemoteMonocular" Action="SetTrackingMethod" Margin="10,0,0,0" Label="Remote Monocular" Width="110" VerticalAlignment="Top" Height="70" ActivationMethod="Mouse"/>
          	</StackPanel>
          </Grid>
        </TabItem>

          
        <!-- Calibration -->

        <TabItem Style="{StaticResource GTTabItem}" x:Name="TabItemCalibration" Header="Calibration" Margin="-1,0,0,0" Width="77" Height="Auto" HorizontalAlignment="Left" FontSize="10.667">
