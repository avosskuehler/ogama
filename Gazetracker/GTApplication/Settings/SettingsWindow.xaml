    				<Slider x:Name="SliderEyeScale" Value="{Binding ScaleFactor}" Background="#FF3D3D3D" Margin="0" Style="{StaticResource SimpleSlider}" BorderBrush="{x:Null}" Foreground="#FF848484" Minimum="1.1" AutoToolTipPlacement="TopLeft" LargeChange="0" Maximum="4" TickFrequency="0.1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="80"/>
    				<Custom:RangeSlider x:Name="RangeSliderEyeSize" 
    					Template="{StaticResource GTRangeSliderTemplate}" 
    					Foreground="{x:Null}" Margin="0,6.333" 
    					RangeStart="10" RangeStop="170" MinRange="10" HorizontalAlignment="Right" Width="130" Height="12" d:LayoutOverrides="VerticalMargin" Visibility="Collapsed" />
    				<GTApplication_Tools:EditSlider x:Name="EditSliderEyeMin" HorizontalAlignment="Stretch" Margin="94.274,0,69,0" VerticalAlignment="Center" Height="18" FontSize="9.333" Maximum="200" Minimum="10" Value="{Binding SizeMin}" Width="60" Background="#FF4D4D4D"/>
    				<GTApplication_Tools:EditSlider x:Name="EditSliderEyeMax" HorizontalAlignment="Right" Margin="0,0,-1,0" VerticalAlignment="Center" Width="60" Height="18" FontSize="9.333" Minimum="10" Maximum="200" Value="{Binding SizeMax}"/>
    			</Grid>
                
    			<Grid x:Name="GridPupilSliders" Width="Auto" Margin="150,62.689,7,61.311">
    				<Slider x:Name="SliderPupilThreshold" Value="{Binding PupilThreshold}" Background="#FF3D3D3D" Margin="0" Style="{StaticResource SimpleSlider}" BorderBrush="{x:Null}" Foreground="#FF848484" Minimum="1" AutoToolTipPlacement="TopLeft" LargeChange="0" Maximum="255" VerticalAlignment="Center" SmallChange="1" HorizontalAlignment="Left" Width="80"/>
    				<Custom:RangeSlider x:Name="RangeSliderPupilSize" 
    					Template="{StaticResource GTRangeSliderTemplate}" 
    					Foreground="{x:Null}" Margin="0,6.333" 
    					RangeStart="1" RangeStop="100" MinRange="2" HorizontalAlignment="Right" Width="130" Height="12" d:LayoutOverrides="VerticalMargin" Visibility="Collapsed" />
    				<GTApplication_Tools:EditSlider x:Name="EditSliderPupilMin" HorizontalAlignment="Stretch" Margin="94.274,0,70,0" VerticalAlignment="Center" Height="18" FontSize="9.333" Maximum="100" Minimum="5" Value="{Binding GlintSizeMinimum}" Width="60" Background="#FF4D4D4D"/>
