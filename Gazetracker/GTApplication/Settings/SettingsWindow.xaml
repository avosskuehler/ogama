      <TabControl x:Name="TabControlMain" Style="{StaticResource GTTabControl}" IsSynchronizedWithCurrentItem="True" Margin="5,5,5,0" BorderThickness="0" Background="{x:Null}" Panel.ZIndex="1">

      <!-- Tracking (method) -->
          
       <TabItem Style="{StaticResource GTTabItem}" x:Name="TabItemTracking" Header="Tracking" IsSelected="True" Margin="0" Width="75" Height="23" HorizontalAlignment="Left" FontSize="10.667">
