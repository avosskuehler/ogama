        		<Grid x:Name="GridBackgroundColor" Margin="19,22,0,0" VerticalAlignment="Top" Height="65" HorizontalAlignment="Left" Width="80">
        			<Label FontSize="12" Foreground="#FFC1C1C1" Content="Background" Height="Auto" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
