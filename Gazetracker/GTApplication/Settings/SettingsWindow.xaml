            </Grid>
            <Grid x:Name="GridRandomPointOrder" Margin="80.5,0,80.5,30" VerticalAlignment="Bottom" Height="25">
            	<Label FontSize="12" Foreground="#FFC1C1C1" Content="Randomize order" Margin="-4,-0.665,79,0.663" d:LayoutOverrides="Height"/>
            	<CheckBox x:Name="CheckBoxRandomPointOrder" IsChecked="{Binding RandomizePointOrder}" Style="{DynamicResource iPhoneCheckBox}" Content="" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Right"/>
            </Grid>
				
		  </Grid>
        </TabItem>

       <!-- Network -->

        <TabItem Style="{StaticResource GTTabItem}" x:Name="TabItemNetwork" Header="Network" Margin="-2,0,0,0" Width="73" Height="Auto" HorizontalAlignment="Left" FontSize="10.667">
          <Grid x:Name="GridNetwork" Width="Auto" Margin="10,8,10,10">
      	  <Grid HorizontalAlignment="Left" Margin="6,19,0,37.667" Width="170">
          		<Grid VerticalAlignment="Top" Height="30" Width="160" HorizontalAlignment="Left">
          			<Label Margin="0" Content="Command server" Foreground="#FFC9C9C9" HorizontalAlignment="Left" FontSize="12"/>
          			<CheckBox x:Name="CheckBoxTCPIPServerEnabled" IsChecked="{Binding TCPIPServerEnabled}" HorizontalAlignment="Right" Width="60" Content="Command Server (TCP/IP)" Background="#FFC9C9C9" Foreground="#FFC1C1C1" Margin="0" Style="{DynamicResource iPhoneCheckBox}" VerticalAlignment="Center" Height="20"/>
          		</Grid>
          		<Grid Height="30" VerticalAlignment="Bottom" Width="160" HorizontalAlignment="Left">
          			<CheckBox x:Name="CheckBoxUDPServer" IsChecked="{Binding UDPServerEnabled}" Foreground="#FFC1C1C1" Content="Data Streaming Server (UDP)" Margin="0" HorizontalAlignment="Right" Width="Auto" Background="#FF979797" Style="{DynamicResource iPhoneCheckBox}" VerticalAlignment="Center" Height="20"/>

          			<Label Margin="0,2,0,-2" Content="Data server" Foreground="#FFC9C9C9" Width="100" HorizontalAlignment="Left" FontSize="12"/>
          		</Grid>
          	</Grid>
      	  <Grid HorizontalAlignment="Right" Margin="0,19,10,35.667" Width="170">
      	  	<Grid Margin="0" Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Right">
      	  		<CheckBox x:Name="CheckBoxUDPServerSendXML" IsChecked="{Binding IsSendingXML}" ToolTip="Send extensive data in XML format" Style="{DynamicResource iPhoneCheckBox}" Foreground="#FFA5A5A5" FontSize="12" FontWeight="Normal" Margin="0" HorizontalAlignment="Right" Width="60" Height="20" VerticalAlignment="Center"/>
