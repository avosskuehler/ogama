<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="GTApplication.SettingsUI.CameraIconUC"
	x:Name="UserControl"
	d:DesignWidth="60" d:DesignHeight="45">

	<Grid x:Name="LayoutRoot">
		<Grid x:Name="GridCamera">
			<Rectangle RadiusX="4" RadiusY="4" Margin="0">
				<Rectangle.Stroke>
					<LinearGradientBrush EndPoint="0.348,0.047" StartPoint="0.652,0.953">
						<GradientStop Color="#FF4F4F4F" Offset="0"/>
						<GradientStop Color="#FF868686" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Stroke>
				<Rectangle.Fill>
					<LinearGradientBrush EndPoint="0.492,0" StartPoint="0.508,1">
						<GradientStop Color="#FF282828" Offset="0.004"/>
						<GradientStop Color="#FF5B5B5B" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>
			
			<Image x:Name="ImageCamera" HorizontalAlignment="Center" Margin="10,5" VerticalAlignment="Center" Source="/GTApplication;Component/Graphics/lensGray.png" Stretch="Fill">
				<Image.Effect>
					<DropShadowEffect BlurRadius="3" Direction="334" Opacity="0.195" ShadowDepth="3"/>
				</Image.Effect>
			</Image>

		</Grid>
	</Grid>
</UserControl>