<UserControl x:Class="Ogama.Modules.Diagrams.DiagramsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*" />
            <ColumnDefinition Width="250*" />
        </Grid.ColumnDefinitions>
        <vc:Chart Name="theChart" ToolBarEnabled="True" AnimationEnabled="True" LightingEnabled="True">
            <vc:Chart.Titles>
                <vc:Title Text="No chart yet" Name="theTitle"></vc:Title>
            </vc:Chart.Titles>
        </vc:Chart>
        <TabControl Grid.Column="1" Name="tabControl1" Grid.Row="0">
            <TabItem Header="Standard charts" Name="tabItem1">
                <Grid>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="6,40,0,0" Name="comboChartTypes" VerticalAlignment="Top" Width="190" SelectionChanged="comboBox1_SelectionChanged" ItemsSource="{Binding}" Loaded="comboChartTypes_Loaded" />
                    <Label Content="Chart type" Height="28" HorizontalAlignment="Left" Margin="6,6,0,0" Name="label2" VerticalAlignment="Top" />
                </Grid>
            </TabItem>
            <TabItem Header="Custom Charts" Name="tabItem2" IsEnabled="True" IsSelected="True">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style x:Key="Spacing" TargetType="{x:Type Control}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                    </StackPanel.Resources>
                    <UniformGrid Columns="3" Margin="0,5,0,0">
                        <UniformGrid.Resources>
                            <Style TargetType="{x:Type RadioButton}">
                                <Setter Property="Margin" Value="5" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </UniformGrid.Resources>
                        <RadioButton Name="radioColumn">Column</RadioButton>
                        <RadioButton Name="radioStacked">Stacked</RadioButton>
                        <RadioButton Name="radioPie">Pie</RadioButton>
                        <!--<RadioButton Name="radioLine">Line</RadioButton>-->
                    </UniformGrid>
                    <Label Content="Display" Name="label5" Style="{StaticResource Spacing}" />
                    <ComboBox Name="comboAgregateFunction" Width="180" Style="{StaticResource Spacing}" />
                    <ComboBox Name="comboY" Width="180" Style="{StaticResource Spacing}" />
                    <Label Content="over" Name="label3" Style="{StaticResource Spacing}" />
                    <ComboBox Name="comboX" Width="180" Style="{StaticResource Spacing}" SelectionChanged="comboX_SelectionChanged" />
                    <TextBox Name="textBoxRanges" IsEnabled="False" Width ="180" Style="{StaticResource Spacing}">Define ranges here...</TextBox>
                    <CheckBox Content="Group in series by" Name="checkBoxGroupBy" Style="{StaticResource Spacing}" Checked="checkBoxGroupBy_Checked" Unchecked="checkBoxGroupBy_Unchecked" IsChecked="False" />
                    <ComboBox Name="comboGroupBy" Width="180" Style="{StaticResource Spacing}" />
                    <Button Content="Draw it!" Margin="10" Height="41" HorizontalAlignment="Center" Name="buttonDrawIt" VerticalAlignment="Top" Width="105" FontSize="16" Click="buttonDrawIt_Click" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
